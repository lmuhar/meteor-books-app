template(name='add-new-book')
    .modal.fade
        .modal-dialog
            .modal-content
                .modal-header
                    h4.modal-title Modal example

                .modal-body
                    form(class="new-task")
                      input(type="text" name="title" placeholder="Title" value="{{title}}")
                      input(type="text" name="author" placeholder="Author" value="{{author}}")
                      input(type="number" name="pages" placeholder="Pages" value="{{pages}}")
                      input(type="date" name="dateStarted" placeholder="Date Started" value="{{dateStarted}}")
                      input(type="date" name="dateFinished" placeholder="Date Finished" value="{{dateFinished}}")
                      button.btn.btn-info(type="submit" name="add"). Add
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
